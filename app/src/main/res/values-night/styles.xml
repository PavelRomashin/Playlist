<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_menu" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/buttonTextColor</item>
    </style>

    <style name="settings_menu_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/buttonTextColor</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minWidth">@dimen/no_distance</item>
        <item name="iconPadding">@dimen/no_distance</item>
        <item name="iconTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>
    <style name="settings_menu_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>
    <style name="settings_menu" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/buttonTextColor</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="settings_switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>
    <style name="settings_header_button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:backgroundTint">@color/buttonTextColor</item>
        <item name="android:minWidth">@dimen/no_distance</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="iconPadding">28dp</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="search_menu" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/buttonTextColor</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="search_clear_button_style" >
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minWidth">@dimen/no_distance</item>
        <item name="iconPadding">@dimen/no_distance</item>
        <item name="iconTint">@color/settingsIconColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>