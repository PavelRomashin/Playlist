<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_menu" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/background_main_activity_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/background_button_color</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/background_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">?attr/background_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="settings_menu_button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/background_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">?attr/background_button_color</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minWidth">@dimen/no_distance</item>
        <item name="iconPadding">@dimen/no_distance</item>
        <item name="iconTint">?attr/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="settings_menu_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/background_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="settings_menu" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/background_button_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settings_switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:textColor">?attr/background_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="settings_header_button" parent="Widget.AppCompat.Button.Borderless.Colored">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:backgroundTint">?attr/background_button_color</item>
        <item name="android:minWidth">@dimen/no_distance</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/background_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="iconPadding">28dp</item>
        <item name="iconTint">?attr/background_text_color</item>
        <item name="iconGravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="search_menu" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/background_button_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="search_clear_button_style">
        <item name="android:textColor">?attr/background_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">?attr/background_button_color</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minWidth">@dimen/no_distance</item>
        <item name="iconPadding">@dimen/no_distance</item>
        <item name="iconTint">?attr/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="main_track_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="track_image_style">
        <item name="android:layout_width">@dimen/track_icon_size</item>
        <item name="android:layout_height">@dimen/track_icon_size</item>
    </style>

    <style name="track_info_style">
        <item name="android:layout_width">@dimen/no_distance</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="track_additional_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="track_details_style">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/track_text</item>
        <item name="android:textColor">?attr/settings_icon_color</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="track_divider_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="arrow_forward_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
