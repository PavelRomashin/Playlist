<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SettingsActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:backgroundTint="@color/white"
        android:minWidth="0dp"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:icon="@drawable/arrow_back"
        app:iconGravity="start"
        app:iconPadding="28dp"
        app:iconTint="@color/buttonTextColor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="34dp"
        android:paddingStart="17dp"
        android:paddingEnd="15dp"
        android:paddingBottom="28dp">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:text="@string/blackTheme"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="99"
                android:gravity="center_vertical"
                android:text="@string/share"
                android:textColor="@color/buttonTextColor"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:minWidth="0dp"
                app:icon="@drawable/share"
                app:iconPadding="0dp"
                app:iconTint="@color/buttonTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="99"

                android:gravity="center_vertical"
                android:text="@string/support"
                android:textColor="@color/buttonTextColor"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="end"

                android:minWidth="0dp"
                app:icon="@drawable/support"
                app:iconPadding="0dp"
                app:iconTint="@color/buttonTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="99"

                android:gravity="center_vertical"
                android:text="@string/userAgreement"
                android:textColor="@color/buttonTextColor"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:minWidth="0dp"
                app:icon="@drawable/user_agreement"
                app:iconPadding="0dp"
                app:iconTint="@color/buttonTextColor" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>