<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background_main_activity_color">@color/backgroundBlue</item>
        <item name="background_button_color">@color/white</item>
        <item name="background_text_color">@color/backgroundBlack</item>
        <item name="icon_color">@color/settingsIconColor</item>
        <item name="settings_icon_color">@color/settingsIconColor</item>
        <item name="background_field_color">@color/grey</item>
        <item name="background_header_color">@color/white</item>
        <item name="text_header_color">@color/backgroundBlack</item>
    </style>
</resources>